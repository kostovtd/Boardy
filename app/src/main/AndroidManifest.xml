<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kostovtd.boardy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.google.android.play.core.splitcompat.SplitCompatApplication"
        android:theme="@style/Theme.Boardy">

        <activity
            android:name="com.kostovtd.boardy.views.activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.kostovtd.boardy.views.activities.SignInActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/sign_in"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>


        <activity
            android:name="com.kostovtd.boardy.views.activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/main"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>


        <activity
            android:name="com.kostovtd.boardy.views.activities.SignUpActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/sign_up"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>


        <activity
            android:name="com.kostovtd.boardy.views.activities.QRCodeScannerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>


    </application>

</manifest>