<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Boardy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mustard</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/pickled_bluewood</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pickled_bluewood</item>
        <item name="colorSecondaryVariant">@color/pickled_bluewood</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_gray</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorControlNormal">@color/pickled_bluewood</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>